<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/collapse"
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start">
        <OnSwipe
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@id/titleTextView"
            motion:dragDirection="dragUp" />
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                android:scaleX="0.1"
                android:scaleY="0.1"
                motion:framePosition="80"
                motion:motionTarget="@id/titleTextView" />
            <KeyAttribute
                android:alpha="0"
                android:scaleX="0.1"
                android:scaleY="0.1"
                motion:framePosition="60"
                motion:motionTarget="@id/dateTextView" />
            <KeyAttribute
                android:alpha="0"
                android:scaleX="0.1"
                android:scaleY="0.1"
                motion:framePosition="40"
                motion:motionTarget="@id/formatTextView" />
            <KeyAttribute
                android:alpha="0"
                android:scaleX="0.1"
                android:scaleY="0.1"
                motion:framePosition="20"
                motion:motionTarget="@id/headerRatingBar" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/roundedView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/stretched_header_height" />

        <Constraint
            android:id="@id/headerIcon"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/titleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:srcCompat="@drawable/header_icon" />

        <Constraint android:id="@id/titleTextView">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/dateTextView">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/formatTextView">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/headerRatingBar">
            <PropertySet android:visibility="visible" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@id/end">
        <Constraint
            android:id="@id/roundedView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shortened_header_height" />

        <Constraint
            android:id="@id/headerIcon"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:srcCompat="@drawable/header_icon" />

        <Constraint android:id="@id/titleTextView">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@id/dateTextView">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@id/formatTextView">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@id/headerRatingBar">
            <PropertySet android:visibility="invisible" />
        </Constraint>
    </ConstraintSet>

</MotionScene>
